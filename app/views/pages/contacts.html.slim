.title= t('views.contacts.contacts')
.contacts
  .contacts__cols
    .contacts__column
      .title.title_small= t('views.contacts.how_find_us')
      .contacts__desc= t('views.contacts.how_find_us_desciption')
      .contacts__item
        .contacts__type= t('views.contacts.phones') + ':'
        ul.contacts__detail
          li
            strong= Settings.contacts.phone
      .contacts__item
        .contacts__type= t('views.contacts.email')
        .contacts__detail
          a(href="mailto:#{Settings.contacts.email}") = Settings.contacts.email
      .contacts__item
        .contacts__type= t('views.contacts.skype') + ':'
        ul.contacts__detail
          li
            a(href="skype:#{Settings.contacts.skype}") = Settings.contacts.skype
      .contacts__desc
        p= Settings.contacts.address
        p= t('views.contacts.office')
      .contacts__desc
        p= t('views.contacts.social')
        p
          .social.social_blue
            = render 'partials/common/social'
    .contacts__column
      = render 'pages/feedback_form'
    .contacts__column
      .title.title_small= t('views.vacancies.our_vacancies')
      .contacts__desc= t('views.vacancies.we_are_finding_talants_html')
      .vacancy.accordion
        - ['RubyOnRails разработчик', 'Креативный дизайнер', 'Frontent разработчик'].each do |vacancy|
          .vacancy__item.accordion__item
            .vacancy__top.accordion__top
              button= vacancy
            .vacancy__desc.accordion__content(style='display: none; padding-left: 10px')
              span Присылате резюме на адрес
              a(href="mailto:#{Settings.contacts.hr_email}")= Settings.contacts.hr_email

