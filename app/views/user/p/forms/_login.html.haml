= form_for form, :url => Sap.auth_api_v1_user_index_path, :remote => true do |f|
  %div
    = f.label :login, t('Login')
    = f.text_field :login
  %div
    = f.label :password
    = f.password_field :password
  %div
    =f.submit t('Login', :rescue_format => :inline)
%div
  %a{:href => password_path, :target => '_blank'}= t('Reset password')