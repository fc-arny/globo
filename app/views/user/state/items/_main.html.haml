.login
  - if current_user
    .logged_in
      %a{href: account_path}= current_user.name
      %button.user-state__settings.dropdown-toggle{data: {toggle: :dropdown}}
        %i

      %ul.login__links.dropdown-menu.pull-right{role: :menu}
        - @items.each do |item|
          %li
            %a{href: item[:link]}
              = item[:title]

  - else
    %a.btn.user-state__login{href: login_path, data: {popup: login_path, title: t('popup.welcome'), classes: 'popup_welcome js-popup'}}
      Войти