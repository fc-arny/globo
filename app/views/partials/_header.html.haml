/ BEGIN .header
%header.header
  .header__top
    %a.logo{href: root_url}
      %span.logo__pic
    ._user_state_wrapper= user_state
  .header__down
    .menu
      .menu__list
        %button.menu__btn-prev
          %i
        %button.menu__btn-next
          %i
        %ul.menu__list-in
          - categories.each do |category|
            %li{data: {item: "menu-item-#{category.id}"}}
              %a{class: "menu__item-#{category.id} menu__item-#{category.url}", href: "/goods/#!/#{category.url}"}
                = category.name
                %i
      .menu__sub-arr
      .menu__sub-wrap
        - subcategories.each do |index, sub_categories|
          .menu__sub{id: index}
            .menu__sub-in
              - sub_categories.each_slice(menu_group_count(sub_categories.count)) do |slice|
                %ul
                  - slice.each do |category|
                    - if category.is_a?(Sap::Category)
                      %li.is-selected
                        %a{href: goods_path(category.url)}= category.name
                    - else
                      %li
                        - #%img{src: 'http://flickholdr.com/200/200'}