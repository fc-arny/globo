     $('._popup_signup_form').ajaxForm({
       onSuccess: function(response){
         $(document).trigger(UserState.prototype.EVT_UPDATE);
         window.$gmPopup.ajaxPopup('hide');
       }
     });

     $('._popup_signin_form').ajaxForm({
       onSuccess: function(response){
         $(document).trigger(UserState.prototype.EVT_UPDATE);
         window.$gmPopup.ajaxPopup('hide');
       }
     });

     $('.phonenumber').mask('+7(999) 999-99-99');
   });

