.basket
  %h2
    = t('goods.basket')
    %span.sum= sum
  %ul.basket-items
    - order.order_items.each do |item|
      %li.basket-item{:'data-id' => item.id, :id => "basket-good_item_#{item.good_item.id}"}
        = item.good_item.good.name
        %span.spin
          %span.minus -
          %span.count= item.count
          %span.plus +

  %a{:href => ''}= t('goods._basket.buy')
= content_for :js do
  :javascript
    $(function(){
      var data = {
        order : #{order.to_json}
      }

      Sap.initialize(data);
    });