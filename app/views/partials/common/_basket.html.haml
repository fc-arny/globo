.basket
  %h2
    = t('goods.basket')
    %span.sum= sum
  %ul.basket-items
    - unless order.nil?
      - order.order_items.each do |item|
        %li.basket-item{:'data-id' => item.id, :id => "basket-good_item_#{item.good_item.id}"}
          = item.good_item.good.name
          %span.spin
            %span.minus -
            %span.count= item.value
            %span.plus +

  %a{:href => ''}= t('goods._basket.buy')

= content_for :js do
  :coffeescript
    $ ->
      Sap.views.basket = new Sap.Views.Basket
      Sap.Views.Basket.collection = Sap.models.order.items if Sap.models.order





