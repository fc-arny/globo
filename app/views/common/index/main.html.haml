/ CSS Files
= content_for :head do
  = stylesheet_link_tag :application

/ JS Files
= content_for :bottom do
  = javascript_include_tag :application

= content_for :body_class do
  main-page

= content_for :base_content do
  #header
    .logo
      %a{:href => root_path, :title => t('common.logo-title')}
        %img{src: "/assets/logo.png", alt: t('common.logo-title')}

    = render :partial => 'partials/current_user', :locals => {:user => current_user}


  %h1 Stores
  - @stores.each do |store|
    %a{:href => "/goods/#{store.url}"}= store.name
    \|


