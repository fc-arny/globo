= content_for :head do
  = stylesheet_link_tag :main

= content_for :bottom do
  = javascript_include_tag :main

= content_for :base_content do
  / BEGIN .page
  .page
    / BEGIN .wrap
    .wrap.wrap_main
      / BEGIN .m-header
      .m-header
        .container
          %a.logo{href: Settings.common.domain.main_link, title: Settings.common.title }
            %span.logo__pic
          ._user_state_wrapper
            = user_state

          .social.social_blue
            = render :partial => 'partials/common/social'
      / BEGIN .m-slider
      .m-slider.js-m-slider
        .container
          .m-slider__cart
            %strong
              Итого
              %span
                5246
                %sup 00
                %i.rub Р
              %em
            %button.m-slider__btn к покупкам
          .m-slider__pager
          .cycle-slideshow{"data-cycle-fx" => "fade", "data-cycle-pager" => ".m-slider__pager", "data-cycle-slides" => "> div", "data-cycle-timeout" => "3000"}
            .m-slider__item{style: "background-image: url(/assets/slider-pic.png);"}
              .m-slider__title-1 ВКУСНЫЕ ИДЕИ ДЛЯ ЛЕТНЕГО МЕНЮ
              .m-slider__title-2 С НОВЫМИ МОРЕПРОДУКТАМИ ОТ ГЛОБУС ГУРМЭ
              %button.m-slider__btn к покупкам
            .m-slider__item{style: "background-image: url(/assets/slider-pic1.png);"}
              .m-slider__title-1 С МОРЕПРОДУКТАМИ ОТ ГЛОБУС ГУРМЭ
              .m-slider__title-2 ВКУСНЫЕ ИДЕИ ДЛЯ ЛЕТНЕГО МЕНЮ
              %button.m-slider__btn к покупкам
      / BEGIN .m-nav
      .m-nav
        %nav.container
          %a{href: static_page_path(:help)}= t('views.index.nav.help')
          %a{href: blog_list_path(:news)}= t('views.index.nav.news')
          %a{href: "#"}= t('views.index.nav.search')
          %a{href: static_page_path(:promo)}= t('views.index.nav.promo')
      = render :partial => 'partials/common/stores_main', :locals => {stores: @stores}

      / BEGIN .m-benefits
      .m-benefits
        %ul.container
          - t('views.index.benefits_hash').each do |benefit|
            %li{class: benefit['class']}
              %i
              %span= benefit['text']
      / BEGIN .m-info
      .m-info.container
        .title= t('views.index.titles.registration_reason')
        %ul
          - t('views.index.registration_reason_array').each do |reason|
            %li= reason
          %li
            %button.btn{data: {popup: login_path, title: t('popup.welcome'), classes: 'popup_welcome js-popup'}}= t('views.index.btn.register')
      .container.container_cols
        = render partial: 'common/index/partials/main_about'
        = render partial: 'common/index/partials/main_news'

      .push
    / BEGIN .footer
    = render :partial => 'partials/footer'