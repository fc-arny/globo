= content_for :head do
  = stylesheet_link_tag :application

= content_for :bottom do
  = javascript_include_tag :application

= content_for :body_class do
  main-page

= content_for :base_content do
  #header
    .logo
      %a{:href => root_path, :title => t("common.logo-title")}
        %img{src: "/assets/logo.png", alt: t('common.logo-title') }

    = render :partial => 'partials/current_user', :locals => {:user => current_user}


  %h1.line-one= t('main.best-supermarkets')
  %h1.line-two= t('main.help-you') + ':'
  %ul.reasons
    %li.one
      .title= t('main.buy-online')
      .description= t('main.buy-online-desc')

    %li.two
      .title= t('main.compare-prices')
      .description= t('main.compare-prices-desc')

    %li.three
      .title= t('main.save-time')
      .description= t('main.save-time-desc')

  - @stores.each do |store|
    %a{:href => "/goods/#{store.url}"}= store.name
    \|

  = render :partial => 'partials/footer'

