= form_for @good, :url=> '/staff/goods', :method => :post do |f|
  %div
    = f.label :name
    = f.text_field :name
  %div
    = f.label :description
    = f.text_area :description
  %div
    = f.label :category
    = f.select(:categories, options_from_collection_for_select(Sap::Category.all, "id", "name", @category.id))
  %div
    = f.submit :"save_good"