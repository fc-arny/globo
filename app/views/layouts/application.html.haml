/ CSS Files
= content_for :head do
  = stylesheet_link_tag :application

/ JS Files
= content_for :bottom do
  = javascript_include_tag :application

= content_for :base_content do
  / Logo, menu, user
  #header
    .logo
      %h1
        %a{:href => "/"}
          %img{src: "/assets/logo.png", alt: "Globomarket"}
    / User info, balance
    = render :partial => 'partials/current_user', :locals => {:user => current_user}

  #main-menu
    - category_list

  / Show flash message
  #notice
  - display_flash_message

  / Content
  #wrapper
    / Left menu - store select, filters
    .content-left
      - store_list
    / Content
    .content-main
      = content_for?(:main) ? yield(:main) : yield
    /  Right menu - basket
    .content-fight
      %h1 Basket

  #footer
    %h1 Footer

= render :template => 'layouts/base'