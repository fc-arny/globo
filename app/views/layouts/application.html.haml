= content_for :head do
  = stylesheet_link_tag :application

= content_for :bottom do
  = javascript_include_tag :application

= content_for :base_content do
  / Logo, menu, user
  .row-fluid.l-header
    .l-container.g-clearfix
      .g-clearfix
        .b-logo
          %h1
            %a{href: "/"}
              %img{src: "/assets/logo.png", alt: "Globomarket"}
        / User info, balance
        = render :partial => 'partials/current_user', :locals => {:user => current_user}
  .row-fluid.l-sub-header
    .l-container.g-clearfix
      = category_list
    - display_flash_message

  / Content
  .row-fluid
    / Left menu - store select, filters
    .span2
      = store_list
     / Content
    .span7
      = content_for?(:main) ? yield(:main) : yield
    /  Right menu - basket
    .span3
      %h1 Basket

= render :template => 'layouts/base'