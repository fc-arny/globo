= content_for :content do

  / Logo, menu, user
  .l-header
    .l-container.g-clearfix
      .g-clearfix
        .b-logo
          %h1
            %a{href: "/"}
              %img{src: " /assets/logo.png", alt: "Globomarket"}

        .b-menu.g-clearfix
          %ul.menu-list.g-clearfix
            %li.menu-item.active
              %a.menu-link{href: "/goods"}
                %span.upper-text So, let's start to
                %span.menu-text Choose
                %span.lower-text something to eat
                %span.menu-arrow
            %li.menu-item
              %a.menu-link{href: "/pay"}
                %span.upper-text Now you can
                %span.menu-text Pay
                %span.lower-text for the goods
                %span.menu-arrow
            %li.menu-item
              %a.menu-link{href: "/checkout"}
                %span.upper-text Soon you will
                %span.menu-text Get
                %span.lower-text your goods
                %span.menu-arrow

        = render :partial => 'partials/current_user', :locals => {:user => current_user}
      #search.g-clearfix
        .b-shop-choose

          .b-select.g-clearfix
            .select-value
              %span Select market
            %ul.select-list
              - @stores.each do |t|
                %li.select-item
                  %span= t.name
            %select
              - @stores.each do |t|
                %option= t.name

        .b-goods-search
          .b-search
            .search-wrapper
              %input{type: "text", placeholder: "Product search"}
            .search-button


  / Categories, search
  .l-sub-header
    .l-container.g-clearfix

      / Categories menu
      .b-goods-categories.g-clearfix
        %ul.goods-categories-head-category.g-clearfix
          - @categoryTree.each do |cat|
            %li.goods-categories-item
              %a.goods-categories-title= cat[:name]
              %ul.goods-categories-sub-category
                - cat[:children].each do |children|
                  %li.goods-categories-item
                    %a.goods-categories-title= children[:name]
            %li.goods-categories-item test
            %li.goods-categories-item test

  .l-content
    .l-container.g-clearfix
      / Main content
      .l-main
        = yield :main

      / Right column
      .l-right
        = yield :right
= render :template => 'layouts/base'