= content_for :content do

  / Logo, menu, user
  .l-header
    .g-clearfix
      .b-logo
        %h1
          %a{href: "/"}
            %img{src: " /assets/logo.png", alt: "Globomarket"}

      .b-menu.g-clearfix
        %ul.menu-list
          %li.menu-item
            %a.menu-link.active{href: "/goods"}
              %span.menu-text Choose
              %span.menu-arrow
          %li.menu-item
            %a.menu-link{href: "/pay"}
              %span.menu-text Pay
              %span.menu-arrow
          %li.menu-item
            %a.menu-link{href: "/checkout"}
              %span.menu-text Get
              %span.menu-arrow

      = render :partial => 'partials/current_user', :locals => {:user => current_user}

  / Categories, search
  .l-sub-header
    .g-clearfix
      .b-shop-choose

        .b-select.g-clearfix
          %select
            - @stores.each do |t|
              %option= t.name
          .select-title Select market
          %ul.select-list
            - @stores.each do |t|
              %li.select-item= t.name

      .b-goods-search
        %input{type: "text", placeholder: "Product search"}

    / Categories menu
    .b-goods-categories.g-clearfix
      %ul.goods-categories-head-category.g-clearfix
        - @categoryTree.each do |cat|
          %li.goods-categories-item
            %a.goods-categories-title= cat[:name]
            %ul.goods-categories-sub-category
              - cat[:children].each do |children|
                %li.goods-categories-item
                  %a.goods-categories-title= children[:name]

  / Main content
  .l-main
    = yield :main

  / Right column
  .l-right
    = yield :right
= render :template => 'layouts/base'