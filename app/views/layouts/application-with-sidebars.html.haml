= content_for :content do
  .with-sidebars
    / Left menu - store select, filters
    .content-left
      = yield(:left_side)

    /  Right menu
    .content-right
      .basket
        %h2
          = t('goods.basket')
          %span.sum 0
        %ul.basket-items
        %a{:href => order_path}= t('goods._basket.buy')

    / Content
    .content-main
      = content_for?(:main) ? yield(:main) : yield


= render :template => 'layouts/application'